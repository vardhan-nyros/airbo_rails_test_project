
<%= simple_form_for(@charge, html: {class: 'form-horizontal' }) do |f| %>
  <%= f.association :customer , collection: Customer.all.map {|c| [c.first_name ,c.id ] } , :lable_method => :first_name , 
      prompt: "Choose a Customer" %>
  <%= f.input :amount %>
  <%= f.input :amount_currency , collection:  ["USD", "GBP", "EUR", "INR"] %>
  <%= f.submit nil, :class => 'btn btn-primary' %>

<% end %>

